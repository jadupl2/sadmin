body,html{
    min-height      :   100vh;
    font-family     :   "Segoe UI", Tahoma, Helvetica, sans-serif;
    font-size       :   13px;
    margin          :   0 auto;
    box-shadow      :   1px 1px 8px #888;
}

#sadmWrapper{
    width           :   100%;
    height          :   100%;
    margin          :   0px;
    padding         :   0px;
}

#sadmHeader{
    clear           :   both;
    text-align      :   center;
    background-color:   rgb(55, 119, 102);
    padding         :   10px;
    margin          :   2px;
    border-width    :   1px;
    border-style    :   solid;
    border-color    :   #000000;
    border-radius   :   10px;
    margin-bottom   :   12px;
    border-radius   :   15px;
	box-shadow      :   3px 3px 5px #888;
	position        :   relative;
	top             :   5px;    
}

#sadmTopTitle{
    padding         :   10px;
    text-align      :   center;
    font-weight     :   bold;
    color           :   #FFFFFF;
}

#sadmTopMenu{
    padding         :   10px;
    text-align      :   center;
}

#sadmTopMenu ul{
    padding         :   0;
    margin          :   0;
    font-weight     :   bold;
    list-style      :   none;
}
#sadmTopMenu li{
    display         :   inline;
    padding         :   0 1em;
}

#sadmTopMenu li>a:link, #sadmTopMenu li>a:visited
{
    color           :   #FFFFFF;
    white-space     :   nowrap;
    text-decoration :   none;
}
#sadmTopMenu li>a:hover,#sadmTopMenu li>a:active
{
    color           :   #337AB7;
    background-color:   yellow;
    text-decoration :   none;
}

#sadmPageContents{
    display         :   -ms-flex;
    display         :   -webkit-flex; /* Safari */
    display         :   flex;
}

#sadmRightColumn{
    overflow-y      :   hidden;
    margin          :   2px;
    /* background-color:   #f8f8f2; */
    /* background-color:   #c0f5e8; */
    background-color:   #e3ecec;
    padding         :   10px;
    border-width    :   1px;
    border-style    :   solid;
    border-color    :   #000000;
    border-radius   :   10px;
    font-size       :   16px;
    width           :   85%;
}


#sadmFooter{
    clear           :   both;
    /* background-color:   #ECEFF3; */
    background-color:   #FF9800;
    padding         :   12px;
    border-width    :   1px;
    border-style    :   solid;
    border-color    :   #000000;
    border-radius   :   10px;
    font-size       :   13px;
    text-align      :   center;
    box-shadow      :   3px 3px 5px #888;
    margin-top      :   5px;
    
}



/*h1,h2,h3,h4,h5,h6{ margin-top:5px; margin-bottom:5px; }*/

h1
{
	font-size       :   28px;
	font-weight     :   bold;
	margin          :   6px 20px 10px 0px;
}
h2
{
	font-size       :   26px;
	font-weight     :   normal;
	margin          :   6px 20px 10px 0px;
}

h3
{
	font-size       :   22px;
	font-weight     :   normal;
	margin          :   6px 20px 10px 0px;
}

