.horizontal-line
{
	border-bottom   :   1px solid #AAA;
	margin-top      :   10px;
	margin-bottom   :   10px;
	margin-left     :   10px;
	margin-right    :   10px;
}

.sub-section
{
	box-shadow      :   3px 3px 5px #888;
	border-radius   :   10px;
	background-color:   white;
	padding         :   10px 0 12px 0;
	margin          :   0 20px 10px 0;
}

.sub-section-header
{
	margin-left     :   10px;
	margin-right    :   10px;
	font-size       :   16px;
}

.sub-section-desc
{
	margin-left     :   15px;
    margin-bottom   :   0.5em;
}

.download-link
{
	text-decoration :   none;
	font-weight     :   bold;
	font-size       :   16px;
	color           : #45689F;
}

.sadmScreenOutput
{
    margin          :   20px 20px 20px 40px;
}


